generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int               @id @default(autoincrement())
  phoneNumber      String            @unique
  password         String
  verificationCode String? // 6-digit code
  codeExpiresAt    DateTime? // expiration timestamp
  isVerified       Boolean           @default(false)
  createdAt        DateTime          @default(now())
  fastRiderTickets FastRiderTicket[]
}

model Area {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  description String?
  attractions Attraction[]
  foodStands  FoodStand[]
  restaurants Restaurant[]
}

model Attraction {
  id                Int               @id @default(autoincrement())
  name              String
  type              String // e.g., RollerCoaster, Ride, Show
  waitTime          Int? // in minutes
  rating            Float?
  area              Area              @relation(fields: [areaId], references: [id])
  areaId            Int
  supportsFastRider Boolean           @default(false)
  openTime          DateTime          @default("2025-01-01T09:00:00Z")
  closeTime         DateTime          @default("2025-01-01T19:00:00Z")
  slotSizeMinutes   Int               @default(30)
  ticketsPerDay     Int               @default(100)
  FastRiderTicket   FastRiderTicket[]
}

model FoodStand {
  id     Int    @id @default(autoincrement())
  name   String
  type   String // e.g., Snack, Ice Cream, Drinks
  rating Float?
  area   Area   @relation(fields: [areaId], references: [id])
  areaId Int
}

model Restaurant {
  id      Int    @id @default(autoincrement())
  name    String
  cuisine String
  rating  Float?
  area    Area   @relation(fields: [areaId], references: [id])
  areaId  Int
}

model FastRiderTicket {
  id           Int        @id @default(autoincrement())
  user         User       @relation(fields: [userId], references: [id])
  userId       Int
  attraction   Attraction @relation(fields: [attractionId], references: [id])
  attractionId Int
  slotStart    DateTime
  slotEnd      DateTime
  createdAt    DateTime   @default(now())
  cancelledAt  DateTime?
}
